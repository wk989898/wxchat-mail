/* miniprogram/pages/index/index.wxss */
.control{
  position: relative;
  /* height: 100%; */
  width: 100%;
  z-index: 99;
  overflow: scroll;
  overflow-y: auto;
}
.main{
  overflow: hidden;
  /* margin-top: 3rem; */
}
.item{
  padding: 1rem 1rem;
  display: flex;
  justify-content: center;
  text-align: justify;
  overflow: hidden;
  border-radius: 0.6rem;
  background-color: #fff;
  z-index: 99;
}
.type{
  font-size: 1rem;
  padding: 1rem 1rem 0.5rem;
}
.mail_scroll{
  box-shadow: 0 0.1rem .05rem grey;
  transform: scale(1.05);
  z-index: 900;
}
.i_select{
  display: inline-block;
  color: white;
  width: 3rem;
  height: 3rem;
  margin-right: .8rem;
  margin-top: 0.5rem;
  text-align: center;
}
.i_select>text{
  width: 3rem;
  height: 3rem;
  display: block;
  border-radius: 50%;
  line-height: 3rem;
  font-size: 2rem;
  transform-style: preserve-3d;
  transition: all .8s;
}
.hover{
  background-color: #ccc;
}
.capital{
  background-color: royalblue;
}
.active{
  background-color: red;
}
.rotate{
 transform: rotateY(180deg);
}
.right{
  position: relative;
  flex:1;
  font-size: 1rem;
  line-height: 1.5rem;
}
.right>view{
  padding-top: .2rem;
}
.star{
  position: absolute;
  width: 1.5rem;
  height: 1.5rem;
  bottom: 0;
  right: 0;
}
.time{
  float: right;
}
.time::after{
  content: '';
  clear: both;
  display: table;
}
.sidebar{
  position: absolute;
  height: 100%;
  width: 0;
  background-color: white;
  transition: ease .5s width;
  white-space: nowrap;
  overflow: hidden;
  z-index: 999;
}
.display{
  width: 85%;
}
.bg{
  position: absolute;
  height: 100vh;
  width: 100vw;
  background-color: #222 ;
  filter:opacity(.8);
  z-index: 995;
}

.bg_archive{
  position: absolute;
  background: green;
  width: 100%;
  height: 100%;
  z-index: -999;
}
.bg_1{
  /* transform: translate(10%,100%); */
  float: left;
  margin-left: 1rem;
  transform:translateY(100%);
}
.bg_2{
  float: right;
  margin-right: 1rem;
  transform:translateY(100%);
}
.bg_2::after{
  content: '';
  clear: both;
  display: table;
}











